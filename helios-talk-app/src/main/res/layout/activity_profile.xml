<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_large">

        <View
            style="@style/Divider.ContactList"
            android:layout_width="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <FrameLayout
                android:id="@+id/avatarFrameView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/listitem_horizontal_margin"
                app:layout_constraintBottom_toTopOf="@+id/divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avatarView"
                    style="@style/ProfileAvatar"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="bottom|left|start"
                    android:visibility="visible"
                    tools:src="@drawable/ic_person_big" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/addNewProfilePicture"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="2dp"
                    android:visibility="visible"
                    app:backgroundTint="#001ca4"
                    app:fabCustomSize="30dp"
                    app:srcCompat="@android:drawable/ic_menu_camera" />

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center">

            <EditText
                android:id="@+id/user_nickaname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:background="@android:color/transparent"
                android:enabled="false"
                android:hint="@string/profile_alias_hint"
                android:importantForAutofill="no"
                android:inputType="text|textCapSentences"
                android:maxLength="35"
                android:maxLines="1" />

        </LinearLayout>

        <View
            style="@style/Divider.ContactList"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/margin_medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/user_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:enabled="true"
                android:hint="@string/profile_fullname_hint"
                android:importantForAutofill="no"
                android:inputType="text|textCapSentences"
                android:maxLength="45"
                android:maxLines="1" />

        </LinearLayout>

        <View
            style="@style/Divider.ContactList"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="Gender"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:entries="@array/gender_options"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout>

        <View
            style="@style/Divider.ContactList"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="Country"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:entries="@array/countries"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <View
            style="@style/Divider.ContactList"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="Work"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/work"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:enabled="true"
                android:hint="@string/profile_not_relevant_hint"
                android:importantForAutofill="no"
                android:inputType="text|textCapSentences"
                android:maxLength="45"
                android:maxLines="1"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <View
            style="@style/Divider.ContactList"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="University"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/university"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:enabled="true"
                android:hint="@string/profile_not_relevant_hint"
                android:importantForAutofill="no"
                android:inputType="text|textCapSentences"
                android:maxLength="45"
                android:maxLines="1"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <View
            style="@style/Divider.ContactList"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="Interests:"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <eu.h2020.helios_social.happ.helios.talk.profile.TagEditText
                android:id="@+id/interests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:enabled="true"
                android:gravity="top|left"
                android:hint="@string/profile_not_relevant_hint"
                android:importantForAutofill="no"
                android:inputType="text|textMultiLine"
                android:maxLength="150"
                android:maxLines="3"
                android:minLines="3"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <View
            style="@style/Divider.ContactList"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/content_aware_interests_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="Interests (based on Content Aware Profiling results):"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <eu.h2020.helios_social.happ.helios.talk.profile.TagEditText
                android:id="@+id/profilerInterests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:enabled="false"
                android:gravity="top|left"
                android:hint="@string/profiling_interests_empty"
                android:importantForAutofill="no"
                android:inputType="text|textMultiLine"
                android:maxLength="150"
                android:maxLines="3"
                android:minLines="3"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <View
            style="@style/Divider.ContactList"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="My Quote:"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/quote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:enabled="true"
                android:gravity="top|left"
                android:hint="@string/profile_not_relevant_hint"
                android:importantForAutofill="no"
                android:inputType="text|textMultiLine"
                android:maxLength="150"
                android:maxLines="3"

                android:minLines="3"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <View
            style="@style/Divider.ContactList"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium" />
    </LinearLayout>
</ScrollView>
