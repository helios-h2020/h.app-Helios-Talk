<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/welcome"
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:paddingTop="16dp"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/enjoy"
        android:textColor="@color/black"
        android:fontFamily="@font/apfel_grotezk"
        android:textSize="23dp"
        android:textAlignment="center"
        android:background="@drawable/rectangle_yellow"
        />

    <View
        android:id="@+id/arrow_yellow"
        android:layout_width="28.86dp"
        android:layout_height="26dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        app:layout_constraintTop_toBottomOf="@id/welcome"
        app:layout_constraintRight_toRightOf="@id/welcome"
        android:background="@drawable/arrow_yellow"
        />

    <View
        android:id="@+id/bubble"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        app:layout_constraintTop_toBottomOf="@id/arrow_yellow"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/oval_red"
        />

    <View
        android:id="@+id/arrow_red"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/arrow_yellow"
        app:layout_constraintLeft_toLeftOf="@id/bubble"
        android:background="@drawable/arrow_red"
        android:rotation="235"
        />

    <View
        android:id="@+id/illustration"
        android:layout_width="270dp"
        android:layout_height="310dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        app:layout_constraintTop_toTopOf="@id/bubble"
        app:layout_constraintBottom_toBottomOf="@id/bubble"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/ic_objective_illustration"
        />


    <TextView
        android:id="@+id/next"
        android:layout_width="326dp"
        android:layout_height="48dp"
        android:layout_marginBottom="@dimen/margin_large"
        android:background="@drawable/round_cornered_button"
        android:fontFamily="@font/apfel_grotezk"
        android:gravity="center"
        android:text="Let's go!"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/rectangle_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/rectangle_1"
        android:layout_width="328dp"
        android:layout_height="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/margin_large"
        android:background="@drawable/rectangle_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/next" />



</androidx.constraintlayout.widget.ConstraintLayout>