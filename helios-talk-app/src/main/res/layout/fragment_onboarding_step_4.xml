<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/bubble"
        android:layout_width="188dp"
        android:layout_height="185dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:background="@drawable/rectangle_yellow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/arrow_red"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/arrow_yellow"
        app:layout_constraintLeft_toLeftOf="@id/bubble"
        app:layout_constraintTop_toBottomOf="@id/bubble"
        />

    <View
        android:id="@+id/illustration"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_forums_illustration"
        app:layout_constraintBottom_toBottomOf="@id/bubble"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/bubble" />

    <TextView
        android:id="@+id/forums_intro_title"
        android:layout_width="326dp"
        android:layout_height="71dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:fontFamily="@font/apfel_grotezk"
        android:gravity="center"
        android:paddingLeft="@dimen/margin_large"
        android:paddingTop="@dimen/margin_tiny"
        android:paddingRight="@dimen/margin_large"
        android:text="@string/title_forums_connections"
        android:textColor="@color/white"
        android:textFontWeight="400"
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bubble" />

    <TextView
        android:id="@+id/forums_intro_details"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/apfel_grotezk"
        android:gravity="center"
        android:paddingLeft="@dimen/margin_large"
        android:paddingTop="@dimen/margin_tiny"
        android:paddingRight="@dimen/margin_large"
        android:text="@string/details_forums_connections"
        android:textColor="@color/m_grey_300"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forums_intro_title" />

    <TextView
        android:id="@+id/next"
        android:layout_width="326dp"
        android:layout_height="48dp"
        android:layout_marginBottom="@dimen/margin_large"
        android:background="@drawable/round_cornered_button"
        android:fontFamily="@font/apfel_grotezk"
        android:gravity="center"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/rectangle_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/rectangle_1"
        android:layout_width="263dp"
        android:layout_height="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/margin_large"
        android:background="@drawable/rectangle_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/next" />

    <View
        android:id="@+id/rectangle_2"
        android:layout_width="61dp"
        android:layout_height="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="49dp"
        android:layout_marginBottom="@dimen/margin_large"
        android:background="@drawable/rectangle_2"
        android:backgroundTint="@color/m_grey_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/next" />


</androidx.constraintlayout.widget.ConstraintLayout>