<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<eu.h2020.helios_social.happ.helios.talk.view.HeliosTalkRecyclerView
		android:id="@+id/list"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:layout_behavior="eu.h2020.helios_social.happ.helios.talk.view.SnackbarAwareBehavior"
		app:scrollToEnd="false" />


	<io.github.kobakei.materialfabspeeddial.FabSpeedDial
		android:id="@+id/speedDial"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:fab_fabBackgroundColor="?attr/helios_accent"
		app:fab_fabDrawable="@drawable/ic_chat_bubble_white"
		app:fab_fabRippleColor="@android:color/transparent"
		app:fab_menu="@menu/conversations_list_actions"
		app:fab_miniFabBackgroundColor="?attr/helios_accent"
		app:fab_miniFabTextBackground="?attr/helios_accent"
		app:fab_miniFabTextColor="@android:color/white"
		app:layout_anchorGravity="bottom|right|end"
		app:layout_behavior="eu.h2020.helios_social.happ.helios.talk.view.SnackbarAwareBehavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
