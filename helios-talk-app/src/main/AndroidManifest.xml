<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="eu.h2020.helios_social.happ.helios.talk">

    <uses-feature
        android:name="android.hardware.bluetooth"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="false" />

    <uses-permission android:name="android.permission.DOWNLOAD_WITHOUT_NOTIFICATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!--suppress DeprecatedClassUsageInspection -->
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION" />


    <application
        android:name="eu.h2020.helios_social.happ.helios.talk.HeliosTalkApplicationImpl"
        android:allowBackup="false"
        android:banner="@mipmap/tv_banner_helio_talk"
        android:icon="@mipmap/ic_helios_talk_launcher_round"
        android:label="@string/app_name"
        android:logo="@mipmap/ic_helios_talk_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/HeliosTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:icon,android:allowBackup,android:theme"
        tools:targetApi="28">

        <receiver
            android:name="eu.h2020.helios_social.happ.helios.talk.login.SignInReminderReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>

        <service
            android:name="eu.h2020.helios_social.happ.helios.talk.HeliosTalkService"
            android:exported="false">
            <intent-filter>
                <action android:name="eu.h2020.helios_social.happ.helios.talk.HeliosTalkService" />
            </intent-filter>
        </service>

        <service
            android:name="eu.h2020.helios_social.happ.helios.talk.NotificationCleanupService"
            android:exported="false"></service>

        <provider
            android:name="androidx.work.impl.WorkManagerInitializer"
            android:authorities="${applicationId}.workmanager-init"
            android:enabled="false"
            android:exported="false" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="eu.h2020.helios_social.helios.talk.debug.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity
            android:name="eu.h2020.helios_social.happ.helios.talk.login.StartupActivity"
            android:label="@string/app_name"></activity>

        <activity
            android:name="eu.h2020.helios_social.happ.helios.talk.account.SetupActivity"
            android:label="@string/setup_title"
            android:windowSoftInputMode="adjustResize|stateAlwaysVisible"></activity>

        <activity
            android:name="eu.h2020.helios_social.happ.helios.talk.splash.SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/HeliosTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="eu.h2020.helios_social.happ.helios.talk.navdrawer.NavDrawerActivity"
            android:launchMode="singleTask"
            android:theme="@style/HeliosTheme.NoActionBar"></activity>

        <activity
            android:name="eu.h2020.helios_social.happ.helios.talk.conversation.ConversationActivity"
            android:label="@string/app_name"
            android:parentActivityName="eu.h2020.helios_social.happ.helios.talk.navdrawer.NavDrawerActivity"
            android:theme="@style/HeliosTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.h2020.helios_social.happ.helios.talk.navdrawer.NavDrawerActivity" />
        </activity>

        <activity
            android:name="eu.h2020.helios_social.happ.helios.talk.share.ShareContentActivity"
            android:label="@string/share_content_to_helios_talk_hint"
            android:theme="@style/HeliosTheme"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="image/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND_MULTIPLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="image/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="video/*" />
            </intent-filter>
        </activity>

        <activity
            android:name="eu.h2020.helios_social.happ.helios.talk.conversation.ImageActivity"
            android:label="@string/app_name"
            android:parentActivityName="eu.h2020.helios_social.happ.helios.talk.conversation.ConversationActivity"
            android:theme="@style/HeliosTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.h2020.helios_social.happ.helios.talk.conversation.ConversationActivity" />
        </activity>

        <activity
            android:name="eu.h2020.helios_social.happ.helios.talk.privategroup.creation.CreateGroupActivity"
            android:label="@string/groups_create_group_title"
            android:parentActivityName="eu.h2020.helios_social.happ.helios.talk.navdrawer.NavDrawerActivity"
            android:windowSoftInputMode="adjustResize|stateAlwaysVisible">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.h2020.helios_social.happ.helios.talk.navdrawer.NavDrawerActivity" />
        </activity>

        <activity
            android:name="eu.h2020.helios_social.happ.helios.talk.privategroup.conversation.PrivateGroupConversationActivity"
            android:label="@string/app_name"
            android:parentActivityName="eu.h2020.helios_social.happ.helios.talk.navdrawer.NavDrawerActivity"
            android:theme="@style/HeliosTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.h2020.helios_social.happ.helios.talk.navdrawer.NavDrawerActivity" />
        </activity>

        <activity
            android:name="eu.h2020.helios_social.happ.helios.talk.privategroup.creation.GroupInviteActivity"
            android:label="@string/groups_invite_members"
            android:parentActivityName="eu.h2020.helios_social.happ.helios.talk.privategroup.conversation.PrivateGroupConversationActivity"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.h2020.helios_social.happ.helios.talk.privategroup.conversation.PrivateGroupConversationActivity" />
        </activity>

        <activity
            android:name="eu.h2020.helios_social.happ.helios.talk.forum.creation.CreateForumActivity"
            android:label="@string/groups_create_forum_title"
            android:parentActivityName="eu.h2020.helios_social.happ.helios.talk.navdrawer.NavDrawerActivity"
            android:windowSoftInputMode="adjustResize|stateAlwaysVisible">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.h2020.helios_social.happ.helios.talk.navdrawer.NavDrawerActivity" />
        </activity>

        <activity
            android:name="eu.h2020.helios_social.happ.helios.talk.search.SearchActivity"
            android:label="@string/app_name"
            android:parentActivityName="eu.h2020.helios_social.happ.helios.talk.navdrawer.NavDrawerActivity"
            android:theme="@style/HeliosTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.h2020.helios_social.happ.helios.talk.navdrawer.NavDrawerActivity" />
        </activity>

        <activity
            android:name="eu.h2020.helios_social.happ.helios.talk.forum.creation.ForumInviteActivity"
            android:label="@string/groups_invite_members"
            android:parentActivityName="eu.h2020.helios_social.happ.helios.talk.forum.conversation.ForumConversationActivity"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.h2020.helios_social.happ.helios.talk.forum.conversation.ForumConversationActivity" />
        </activity>

        <activity
            android:name=".conversation.sharecontacts.ShareContactActivity"
            android:label="@string/share_contact"
            android:parentActivityName=".conversation.ConversationActivity"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".conversation.ConversationActivity" />
        </activity>

        <activity
            android:name="eu.h2020.helios_social.happ.helios.talk.forum.membership.ForumMembershipListActivity"
            android:label="@string/forum_members"
            android:parentActivityName="eu.h2020.helios_social.happ.helios.talk.forum.conversation.ForumConversationActivity"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.h2020.helios_social.happ.helios.talk.forum.conversation.ForumConversationActivity" />
        </activity>

        <activity
            android:name="eu.h2020.helios_social.happ.helios.talk.forum.conversation.ForumConversationActivity"
            android:label="@string/app_name"
            android:parentActivityName="eu.h2020.helios_social.happ.helios.talk.navdrawer.NavDrawerActivity"
            android:theme="@style/HeliosTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.h2020.helios_social.happ.helios.talk.navdrawer.NavDrawerActivity" />
        </activity>

        <activity
            android:name=".profile.ProfileActivity"
            android:label="Profile"
            android:parentActivityName="eu.h2020.helios_social.happ.helios.talk.navdrawer.NavDrawerActivity"
            android:windowSoftInputMode="adjustResize|stateAlwaysVisible">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.h2020.helios_social.happ.helios.talk.navdrawer.NavDrawerActivity" />
        </activity>

        <activity
            android:name="eu.h2020.helios_social.happ.helios.talk.profile.ContactProfileActivity"
            android:label="Profile"
            android:parentActivityName="eu.h2020.helios_social.happ.helios.talk.navdrawer.NavDrawerActivity"
            android:windowSoftInputMode="adjustResize|stateAlwaysVisible">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.h2020.helios_social.happ.helios.talk.navdrawer.NavDrawerActivity" />
        </activity>


        <activity
            android:name="eu.h2020.helios_social.happ.helios.talk.context.CreateContextActivity"
            android:label="@string/create_context_title"
            android:parentActivityName="eu.h2020.helios_social.happ.helios.talk.navdrawer.NavDrawerActivity"
            android:windowSoftInputMode="adjustResize|stateAlwaysVisible">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.h2020.helios_social.happ.helios.talk.navdrawer.NavDrawerActivity" />
        </activity>

        <activity
            android:name="eu.h2020.helios_social.happ.helios.talk.StartupFailureActivity"
            android:label="@string/startup_failed_activity_title"></activity>

        <activity
            android:name="eu.h2020.helios_social.happ.helios.talk.settings.SettingsActivity"
            android:label="@string/settings_button"
            android:parentActivityName="eu.h2020.helios_social.happ.helios.talk.navdrawer.NavDrawerActivity"
            android:permission="android.permission.READ_NETWORK_USAGE_HISTORY">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.h2020.helios_social.happ.helios.talk.navdrawer.NavDrawerActivity" />
            <intent-filter>
                <action android:name="android.intent.action.MANAGE_NETWORK_USAGE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="eu.h2020.helios_social.happ.helios.talk.login.ChangePasswordActivity"
            android:label="@string/change_password"
            android:parentActivityName="eu.h2020.helios_social.happ.helios.talk.settings.SettingsActivity"
            android:windowSoftInputMode="adjustResize|stateAlwaysVisible">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.h2020.helios_social.happ.helios.talk.settings.SettingsActivity" />
        </activity>

        <activity
            android:name="eu.h2020.helios_social.happ.helios.talk.logout.ExitActivity"
            android:theme="@android:style/Theme.NoDisplay"></activity>

        <activity
            android:name="eu.h2020.helios_social.happ.helios.talk.logout.HideUiActivity"
            android:theme="@android:style/Theme.NoDisplay"></activity>

        <activity
            android:name="eu.h2020.helios_social.happ.helios.talk.account.UnlockActivity"
            android:label="@string/lock_unlock"
            android:launchMode="singleTask"
            android:theme="@style/HeliosTheme.NoActionBar" />

        <activity
            android:name="eu.h2020.helios_social.happ.helios.talk.contact.connection.AddContactActivity"
            android:label="@string/add_contact_remotely_title"
            android:theme="@style/HeliosTheme"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "helios://" -->
                <data
                    android:host="helios-social.com"
                    android:scheme="https" />
            </intent-filter>
        </activity>

        <activity
            android:name="eu.h2020.helios_social.happ.helios.talk.contact.connection.PendingContactListActivity"
            android:label="@string/connection_requests"
            android:theme="@style/HeliosTheme" />

        <activity
            android:name="eu.h2020.helios_social.happ.helios.talk.context.sharing.InviteContactsToContextActivity"
            android:label="@string/invite_contacts_context"
            android:parentActivityName="eu.h2020.helios_social.happ.helios.talk.navdrawer.NavDrawerActivity"
            android:theme="@style/HeliosTheme"
            android:windowSoftInputMode="adjustResize|stateAlwaysVisible">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.h2020.helios_social.happ.helios.talk.navdrawer.NavDrawerActivity" />
        </activity>

        <activity
            android:name="eu.h2020.helios_social.happ.helios.talk.context.invites.InvitationListActivity"
            android:label="@string/invitations"
            android:theme="@style/HeliosTheme" />
    </application>
</manifest>
